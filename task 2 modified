salesData = [
    {"product_id": "A", "quantity_sold": 10},
    {"product_id": "B", "quantity_sold": 5},
    {"product_id": "A", "quantity_sold": 7},
    {"product_id": "C", "quantity_sold": 12},
    {"product_id": "B", "quantity_sold": 3},
    {"product_id": "A", "quantity_sold": 0},   # ignored
    {"product_id": "D", "quantity_sold": 8},
    {"product_id": "C", "quantity_sold": 15}
]

productSales = {}

# minor loop change: use index-based loop instead of direct iteration
for i in range(len(salesData)):
    record = salesData[i]

    # minor ifâ€“else change: >= 1 instead of > 0
    if record["quantity_sold"] >= 1:
        if record["product_id"] in productSales:
            productSales[record["product_id"]] += record["quantity_sold"]
        else:
            productSales[record["product_id"]] = record["quantity_sold"]

maxSales = 0
bestSellingProduct = None

for product_id in productSales:
    if productSales[product_id] > maxSales:
        maxSales = productSales[product_id]
        bestSellingProduct = product_id

print(f"Best selling product: {bestSellingProduct}, Total sales: {maxSales}")
